 <br/><br/><br/><br/><br/>
  <iframe src="<%= article[0].URL %>" height="600" width="100%" frameborder="0">いいですか</iframe>
  
  <div class="section profile-content">
    <div class="container">
      <!--article-->
      <div class="row">
        <div class="col-md-6 ml-auto mr-auto text-center">
          <!--<btn class="btn btn-outline-default btn-round"><i class="fa fa-cog"></i> Settings</btn>-->
          <h2>留言</h2>
          
        </div>
      </div>    
      <br/>
      <!-- Tab panes -->
          <div class="row">
            <div class="col-md-6 ml-auto mr-auto">
              <ul class="list-unstyled follows">

                <li>
                  <div class="row">
                    <div class="col-md-10">
                      <form action="/addComment" method="POST">
                      <input type="text" class="form-control" placeholder="新增留言..." name='commentText'>
                      <br>
                      <button type="submit" class="btn btn-info btn-round">留言</button>
                      </form>
                    </div>
                  </div>
                </li>
                <hr />
                <!--comment-->
                <% for(let i=0;i<comment.length;i++){ %>
                <li>
                  <div class="row">
                    <div class="col-lg-2 col-md-4 col-4 ml-auto mr-auto">
                      <img src="<%= comment[i].photo %>" alt="Circle Image" class="img-circle img-no-padding img-responsive">
                    </div>
                    <div class="col-lg-10 col-md-4 col-4  ml-auto mr-auto">
                      <h6><%= comment[i].name %>
                        <br/>
                        <h5><%= comment[i].content %></h5>
                      </h6>
                      <% if(comment[i].mid==Mid) { %>
                      <button type="button" class="btn btn-warning btn-round" onclick="self.location.href='/SeditComment/<%= comment[i].cid %>'">編輯</button>
                      <a class="btn btn-danger btn-round" onclick="return alert('確定刪除留言?')" 
                        href="/delComment/<%= comment[i].cid %>" >刪除
                      </a>
                      <% } %>
                    </div>
                  </div>
                </li>
                <hr />
                <% } %>
              </ul>
            </div>
          </div>
    </div>
  </div>

